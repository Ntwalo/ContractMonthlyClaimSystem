<Window x:Class="ContractMonthlyClaimSystem.SubmitClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="400" Width="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel Margin="10">
                <TextBlock Text="Lecturer ID:" Margin="0,0,0,5"/>
                <TextBox Name="LecturerIDTextBox" Margin="0,0,0,10"/>

                <TextBlock Text="Claim Details:" Margin="0,0,0,5"/>
                <TextBox Name="ClaimDetailsTextBox" Height="100" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                <TextBlock Text="Upload Supporting Documents:" Margin="0,0,0,5"/>
                <Button Name="UploadDocumentsButton" Content="Browse..." Click="UploadDocumentsButton_Click" Margin="0,0,0,10"/>
                <TextBlock Name="SelectedFileTextBlock" Margin="0,0,0,10"/>

                <Button Name="SubmitClaimButton" Content="Submit" Click="SubmitClaimButton_Click" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
